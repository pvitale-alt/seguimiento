    <div class="app-container">
        <%- include('../partials/sidebar', { productosEquipos, productoActual, equipoActual, tipoActual, isAdmin }) %>
        
        <div class="main-content">
            <div class="content-area">
                <% if (productoActual) { %>
                <!-- T√≠tulo y Bot√≥n Actualizar (solo cuando hay producto seleccionado) -->
                <div style="padding: 16px 24px; display: flex; justify-content: space-between; align-items: center;">
                    <h1 style="font-size: 32px; font-weight: 500; color: #424242; margin: 0; font-family: 'Google Sans', 'Roboto', sans-serif;">
