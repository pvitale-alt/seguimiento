<aside class="sidebar" id="sidebar">
    <nav class="sidebar-nav">
        <% productosEquipos.forEach(item => { 
            const producto = item.producto;
            const equipos = item.equipos || [];
            const productoNormalizado = producto === 'OMS' ? 'Order Management' : producto;
            const isActive = productoActual === producto;
        %>
            <div class="producto-section">
                <a 
                    href="/?producto=<%= encodeURIComponent(producto) %>&tipo=<%= tipoActual || 'mantenimiento' %>" 
                    class="nav-item <%= isActive ? 'active' : '' %>"
                    onclick="event.preventDefault(); toggleProducto('<%= producto %>');"
                >
                    <span><%= productoNormalizado %></span>
                    <svg class="nav-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="margin-left: auto; width: 16px; height: 16px; transition: transform 0.2s;" id="icon-<%= producto %>">
                        <path d="<%= isActive ? 'M7 10l5 5 5-5z' : 'M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z' %>"/>
                    </svg>
                </a>
                <div class="producto-equipos" id="equipos-<%= producto %>" style="display: <%= isActive ? 'block' : 'none' %>;">
                    <% equipos.forEach(equipo => { %>
                        <a 
                            href="/?producto=<%= encodeURIComponent(producto) %>&equipo=<%= encodeURIComponent(equipo.id_equipo_redmine) %>" 
                            class="nav-item nav-item-equipo <%= equipoActual === equipo.id_equipo_redmine ? 'active' : '' %>"
                            style="padding-left: 48px;"
                        >
                            <span><%= equipo.equipo %></span>
                        </a>
                    <% }); %>
                </div>
            </div>
        <% }); %>
        
        <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
        <a href="/admin" class="nav-item <%= activeMenu === 'admin' ? 'active' : '' %>">
            <svg class="nav-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94L14.4 2.81c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"/>
            </svg>
            <span>Administración</span>
        </a>
        <% } %>
    </nav>
</aside>

<script>
    // Inicializar estado de flechas al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        <% productosEquipos.forEach(item => { 
            const producto = item.producto;
            const isActive = productoActual === producto;
        %>
            const icon<%= producto.replace(/[^a-zA-Z0-9]/g, '') %> = document.getElementById('icon-<%= producto %>');
            const equiposDiv<%= producto.replace(/[^a-zA-Z0-9]/g, '') %> = document.getElementById('equipos-<%= producto %>');
            if (icon<%= producto.replace(/[^a-zA-Z0-9]/g, '') %> && equiposDiv<%= producto.replace(/[^a-zA-Z0-9]/g, '') %>) {
                if (equiposDiv<%= producto.replace(/[^a-zA-Z0-9]/g, '') %>.style.display === 'none' || (!equiposDiv<%= producto.replace(/[^a-zA-Z0-9]/g, '') %>.style.display && !<%= isActive %>)) {
                    // Contraído: flecha hacia la derecha
                    icon<%= producto.replace(/[^a-zA-Z0-9]/g, '') %>.innerHTML = '<path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z"/>';
                } else {
                    // Expandido: flecha hacia abajo
                    icon<%= producto.replace(/[^a-zA-Z0-9]/g, '') %>.innerHTML = '<path d="M7 10l5 5 5-5z"/>';
                }
            }
        <% }); %>
    });
    
    function toggleProducto(producto) {
        const equiposDiv = document.getElementById('equipos-' + producto);
        const icon = document.getElementById('icon-' + producto);
        
        if (equiposDiv.style.display === 'none') {
            equiposDiv.style.display = 'block';
            // Cambiar a flecha hacia abajo cuando está expandido
            icon.innerHTML = '<path d="M7 10l5 5 5-5z"/>';
        } else {
            equiposDiv.style.display = 'none';
            // Cambiar a flecha hacia la derecha cuando está contraído
            icon.innerHTML = '<path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z"/>';
        }
    }
</script>

<style>
    .producto-section {
        margin-bottom: 0;
    }
    
    .producto-equipos {
        background: #f8f9fa;
    }
    
    .nav-item-equipo {
        font-size: 13px;
        height: 40px;
    }
    
    .nav-item svg {
        transition: transform 0.2s;
    }
</style>
